              "choices": ["Recertify", "Revoke"]
            }
          },
          {
            "fieldKey": "revocationReason",
            "label": "Reason for Revocation",
            "type": "textarea",
            "isConditional": true,
            "options": {
              "conditionalLogic": {
                "dependsOn": "action",
                "condition": "equals",
                "value": "Revoke"
              }
            }
          }
        ]
      },
